@model AgendaElectronica.Core.DTOs.CrearEditarUsuarioDto
@{
    ViewData["Title"] = "Crear Editar";
}

<div class="container-fluid">
    <div class="row">
        <div class="offset-3 col-md-6">
            <div class="card ">
                <div class="card-header card-header-rose card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">mail_outline</i>
                    </div>
                    <h4 class="card-title">@(string.IsNullOrEmpty(Model.NombreUsuario) ? "Nuevo usuario":"Editar usuario")</h4>
                </div>
                <div class="card-body ">
                    <form asp-controller="Usuarios" asp-action="GuardarUsuario" id="frmGuardarUsuario">
                        
                        @if (string.IsNullOrEmpty(Model.NombreUsuario))
                        {
                            <div class="form-group">
                                <label asp-for="NombreUsuario" class="bmd-label-floating">Usuario</label>
                                <input asp-for="NombreUsuario" type="text" class="form-control">
                            </div>
                            <input type="hidden" name="esNuevo" value="true"/>
                        }
                        else
                        {
                            <div class="form-group">
                                <label for="Usuario" class="bmd-label-floating">Usuario</label>
                                <input id="Usuario" type="text" class="form-control" value="@Model.NombreUsuario" readonly="readonly">
                            </div>

                            <input type="hidden" asp-for="NombreUsuario"/>
                            <input type="hidden" name="esNuevo" value="false"/>
                        }

                        <div class="form-group">
                            <label asp-for="Nombre" class="bmd-label-floating">Nombre</label>
                            <input asp-for="Nombre" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="bmd-label-floating">Apellido</label>
                            <input asp-for="Apellido" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="bmd-label-floating">Password</label>
                            <input asp-for="Password" type="password" class="form-control">
                        </div>
                    </form>
                </div>
                <div class="card-footer ">
                    <button type="button" class="btn is-filled btn-rose" id="btnGuardarUser">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#btnGuardarUser").on('click', function(e) {
                e.preventDefault();
                $('#frmGuardarUsuario').submit();
            });
        });
    </script>
}
